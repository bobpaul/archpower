pkgname=qt5-webengine
_qtver=5.15.6
pkgver=${_qtver/-/}
pkgrel=2
# Upstream won't tag releases, because potatoes https://lists.qt-project.org/pipermail/interest/2021-March/036386.html
arch=(x86_64 powerpc64le)
url='https://www.qt.io'
license=('LGPL3' 'LGPL2.1' 'BSD')
pkgdesc='Provides support for web applications using the Chromium browser project'
depends=('qt5-webchannel' 'qt5-location' 'libxcomposite' 'libxrandr' 'pciutils' 'libxss' 'libxkbfile' 
         'libevent' 'snappy' 'nss' 'libxslt' 'minizip' 'ffmpeg' 're2' 'libvpx' 'libxtst' 'ttf-font'
         'clang')
makedepends=('git' 'python2' 'python' 'gperf' 'jsoncpp' 'ninja' 'qt5-tools'
             'poppler' 'libpipewire02' 'nodejs' 'gn')
optdepends=('libpipewire02: WebRTC desktop sharing under Wayland')
groups=('qt' 'qt5')
options=(!ccache)
_pkgfqn=qtwebengine
source=(git+https://code.qt.io/qt/qtwebengine.git#tag=v${pkgver}-lts
        git+https://code.qt.io/qt/qtwebengine-chromium.git
        0012-chromium-abseil-cpp-fix-build-with-glibc-2.34.patch
        0013-chromium-breakpad-fix-build-with-glibc-2.34.patch
        0018-sandbox-membarrier.patch
        0020-msgvec-push_back.patch
        0021-sandbox-sched_getparam.patch
        0089-enable-ppc64.patch
        0090-qtwebengine-ppc64.patch
