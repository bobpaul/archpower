pkgname=nodejs
pkgver=16.0.0
pkgrel=1
pkgdesc='Evented I/O for V8 javascript'
arch=(x86_64 powerpc64le)
url='https://nodejs.org/'
license=('MIT')
# c-ares: wait until a newer release than 1.16.1
depends=('openssl' 'zlib' 'icu' 'libuv' 'libnghttp2') # 'c-ares' 'http-parser' 'v8')
provides=('npm')
conflicts=('npm')
makedepends=('python' 'procps-ng')
source=("https://github.com/nodejs/node/archive/v$pkgver/nodejs-$pkgver.tar.gz")
sha512sums=('606d283307e463f7bd91ad42be3d4d194ee57dd1e1c3a29e87ada0d4de70186b3920758f567f09fe5f93a0ceed92d485dd372074974d176c4eef0b6678102c3e')

build() {
  cd node-$pkgver
   case "${CARCH}" in
     powerpc64le) CPU=ppc64 ;;
     x86_64) CPU=x64 ;;
   esac

  ./configure \
    --prefix=/usr \
    --with-intl=system-icu \
    --dest-cpu=${CPU} \
    --shared-openssl \
    --shared-zlib \
    --shared-libuv \
    --experimental-http-parser \
    --shared-nghttp2
    # --shared-cares
    # --shared-v8
    # --shared-http-parser

  make
}

check() {
  cd node-$pkgver
  make test || :
}

package() {
  cd node-$pkgver

  make DESTDIR="$pkgdir" install

  install -D -m644 LICENSE \
    "$pkgdir"/usr/share/licenses/nodejs/LICENSE
}

