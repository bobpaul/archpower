# POWER Maintainer: Alexander Baldeck <alex.bldck@gmail.com>
# Maintainer: Daniel Bermond <dbermond@archlinux.org>

pkgname=highway
pkgver=1.0.1
pkgrel=1
pkgdesc='A C++ library for SIMD (Single Instruction, Multiple Data)'
arch=(x86_64 powerpc64le powerpc riscv64)
url='https://github.com/google/highway/'
license=('Apache')
depends=('gcc-libs')
makedepends=('cmake' 'gtest' 'clang')
source=("https://github.com/google/highway/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('7ca6af7dc2e3e054de9e17b9dfd88609a7fd202812b1c216f43cc41647c97311')
options=(!distcc)

build() {
    case "${CARCH}" in
      riscv64)
	export CC=clang;
	export CXX=clang++
	_cmake_options=(
	  -DBUILD_TESTING:BOOL='OFF'
	)
      ;;
    esac

    cmake -B build -S "${pkgname}-${pkgver}" \
        -DCMAKE_BUILD_TYPE:STRING='None' \
        -DCMAKE_INSTALL_PREFIX:PATH='/usr' \
        -DBUILD_SHARED_LIBS:BOOL='ON' \
        -DWHY_SYSTEM_GTEST:BOOL='ON' \
	-Wno-dev ${_cmake_options}
    make -C build
}

check() {
    make -C build test
}

package() {
    make -C build DESTDIR="$pkgdir" install
}
