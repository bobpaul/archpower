espress_message() {
  echo "!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"
  echo "!! This is the SMP enabled WiiU kernel                         !!"
  echo "!! Ensure you have the [{base,testing}-espresso] repositories  !!"
  echo "!! repositories enabled & packages synced!                     !!"
  echo "!!                                                             !!"
  echo "!!  Userspace *WILL* break otherwise!                          !!"
  echo "!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!"
}

post_install() {
  espresso_message
}

post_upgrade() {
  espresso_message
}

